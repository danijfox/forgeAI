rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Match any file in the uploads folder
    match /uploads/{userId}/{allPaths=**} {
      
      // Allow read access for any authenticated user
      allow read: if request.auth != null;
      
      // Allow write access only if the userId in the path matches the authenticated user's UID.
      // This is a critical security rule to ensure users can only write to their own folders.
      allow write: if request.auth != null && userId == request.auth.uid;
    }
  }
}
