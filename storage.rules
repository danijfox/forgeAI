rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Match any file in the USERS folder, not uploads
    match /users/{userId}/{allPaths=**} {
      
      allow read: if request.auth != null;
      
      // The security logic remains the same and is correct.
      // Allow write only if the user is authenticated and is writing to their own folder.
      allow write: if request.auth != null && userId == request.auth.uid;
    }
  }
}
